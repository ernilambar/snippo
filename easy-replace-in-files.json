{
  "easyReplaceInFiles": [
    {
      "files": "readme.txt",
      "from": "Stable tag:\\s?(.+)",
      "type": "regex",
      "to": "Stable tag: $$npm_package_version$$"
    },
    {
      "files": "$$package__main_file$$",
      "from": "Version:\\s?(.+)",
      "type": "regex",
      "to": "Version: $$npm_package_version$$"
    },
    {
      "files": "$$package__main_file$$",
      "from": "define\\( \\'SNIPPO_VERSION\\'\\, \\'(.+)\\'",
      "type": "regex",
      "to": "define( 'SNIPPO_VERSION', '$$npm_package_version$$'"
    }
  ]
}
