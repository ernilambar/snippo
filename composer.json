{
  "name": "ernilambar/snippo",
  "description": "Snippets manager.",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1",
    "ernilambar/coding-standard": "^1",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpcompatibility/php-compatibility": "dev-develop#9013cd039fe5740953f9fdeebd19d901b80e26f2",
    "phpmd/phpmd": "^2.15",
    "slevomat/coding-standard": "^8",
    "wp-coding-standards/wpcs": "^3.2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Nilambar\\Snippo\\": "app/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4"
    },
    "sort-packages": true
  },
  "scripts": {
    "format": "@php ./vendor/bin/phpcbf --report-full --report-summary",
    "lint": [
      "@lint-php",
      "@phpcs"
    ],
    "lint-php": "@php ./vendor/bin/parallel-lint --colors --exclude .git --exclude vendor .",
    "phpcs": "@php ./vendor/bin/phpcs --report-full --report-summary",
    "phpmd": "phpmd . text phpmd.xml"
  }
}
