{
  "name": "snippo",
  "version": "1.0.0",
  "title": "Snippo",
  "description": "Snippets manager.",
  "author": "Nilambar Sharma",
  "license": "GPL-2.0-or-later",
  "main_file": "snippo.php",
  "keywords": [
    "wordpress",
    "wordpress-plugin"
  ],
  "homepage": "https://github.com/ernilambar/snippo",
  "repository": {
    "type": "git",
    "url": "https://github.com/ernilambar/snippo.git"
  },
  "bugs": {
    "url": "https://github.com/ernilambar/snippo/issues"
  },
  "browserslist": "> 2%, last 2 versions, not dead",
  "packtor": {
    "files": [
      "**/*",
      "!*.js",
      "!*.json",
      "!*.lock",
      "!*.md",
      "!*.xml",
      "!*.yaml",
      "!languages/**/*",
      "!src/**/*"
    ]
  },
  "dependencies": {
    "@wordpress/api-fetch": "^7.26.0",
    "@wordpress/element": "^6.26.0",
    "@wordpress/i18n": "^5.26.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-select": "^5.10.2",
    "snippo-ui": "github:ernilambar/snippo-ui"
  },
  "devDependencies": {
    "@wordpress/prettier-config": "^4.26.0",
    "@wordpress/scripts": "^30.19.0",
    "easy-replace-in-files": "^1.0.3",
    "packtor": "^1.0.2",
    "prettier": "npm:wp-prettier@^3.0.3",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "start": "wp-scripts start src/snippets/index.js --output-path=build",
    "build": "wp-scripts build src/snippets/index.js --output-path=build",
    "format": "prettier \"**/*.{css,js,json}\" --write",
    "version": "easy-replace-in-files",
    "vendor": "composer install --no-dev --no-scripts -o",
    "ready": "pnpm run vendor && pnpm run build",
    "predeploy": "rimraf build deploy vendor && pnpm run ready",
    "deploy": "packtor"
  }
}
